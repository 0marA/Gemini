{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "(gdb) Launch Debugger",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/bin/Debug/${workspaceRootFolderName}.exe",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "Build: Debug",
			"externalConsole": true,
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"windows": {
				"MIMode": "gdb",
				"miDebuggerPath": "C:/mingw32/bin/gdb.exe",
				"env": {
					"Path": "C:/mingw32/bin;C:/SFML-2.5.0/bin"
				}
			},
			"linux": {
				"MIMode": "gdb",
				"miDebuggerPath": "/usr/bin/gdb",
				"env": {
					"Path": "/usr/bin"
				}
			},
			"osx": {
				"MIMode": "lldb"
			}
		}
	]
}