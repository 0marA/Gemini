{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"options": {
		"cwd": "${workspaceRoot}",
		"env": {
			"Path": "C:/mingw32/bin;C:/SFML-2.5.0/bin"
		}
	},
	"windows": {
		"options": {
			"env": {
				"NAME": "${workspaceRootFolderName}.exe",
				"MAKE_EXEC": "mingw32-make",
				"PLATFORM": "windows",
				"PROF_EXEC": "gprof",
				"PROF_ANALYSIS_FILE": "profiler_analysis.stats"
			}
		}
	},
	"linux": {
		"options": {
			"env": {
				"NAME": "${workspaceRootFolderName}",
				"MAKE_EXEC": "make",
				"PLATFORM": "linux",
				"PROF_EXEC": "gprof",
				"PROF_ANALYSIS_FILE": "profiler_analysis.stats"
			}
		}
	},
	"presentation": {
		"echo": false,
		"reveal": "always",
		"focus": true,
		"panel": "shared"
	},
	"tasks": [
